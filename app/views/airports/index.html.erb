<style>
.results tr[visible='false'],
.no-result{
  display:none;
}

.results tr[visible='true']{
  display:table-row;
}

.counter{
  padding:8px;
  color:#ccc;
}

</style>



<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="row">
      <div class="col-md-4">
        <h1>Airports</h1>
      </div>

    </div>




    <div id="accordion" role="tablist" aria-multiselectable="true">

      <% @locations.each_with_index  do | location, i | %>
          <div class="card">
            <div class="card-header" role="tab" id="heading<%=i%>">
              <h5 class="mb-0">
                <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse<%=i%>" aria-expanded="false" aria-controls="collapse<%=i%>">
                  <%= location.name %>
                </a>
              </h5>
            </div>

            <div id="collapse<%=i%>" class="collapse" role="tabpanel" aria-labelledby="heading<%=i%>">
              <div class="card-block">
                <!--<div class="col-md-4">-->
                  <!--<div class="form-group pull-right">-->
                    <!--<input type="text" class="search form-control" placeholder="Search">-->
                  <!--</div>-->
                  <!--<span class="counter pull-right"></span>-->
                <!--</div>-->
                <table class="table results">
                  <thead>
                  <tr>
                    <th>Name</th>
                    <th>Symbol</th>
                    <th>Sectional</th>
                  </tr>
                  <tr class="warning no-result">
                    <td colspan="4"><i class="fa fa-warning"></i> No result</td>
                  </tr>
                  </thead>

                  <tbody>
                  <% location.airports.order(:name).order(:sectional).each do |airport| %>
                      <tr>
                        <td><%= link_to airport.name, airport %></td>
                        <td><%=airport.symbol%></td>
                        <td><%=airport.sectional%></td>

                      </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
      <% end %>


    </div>


  </div>

</div>

