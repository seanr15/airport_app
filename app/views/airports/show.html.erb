<div class="jumbotron">
  <h1 class="display-3"><%= @airport.name %></h1>
  <h2><%= @airport.symbol %></h2>
  <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
  <hr class="m-y-2">
  <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
  </p>
</div>
<%= link_to 'Edit', edit_airport_path(@airport) %> |
<%= link_to 'Back', airports_path %>


<table class="table">
  <thead>
    <tr>
      <th>
      </th>
      <% @data["runways"].each do |runway|%>
        <th>
          <%= Runway.find(runway[0]).number %>
        </th>
      <%end%>

    </tr>


  </thead>
  <tbody>



    <% times = @data["time"]%>
    <% runways = @data["runways"] %>
    <% wind_direction = @data["wind_direction"] %>
    <% wind_speed = @data["wind_speed"] %>

    <% times.each_with_index do | time, i | %>
    <tr>

      <td>
        <p><%=time%></p>
        <p>Wind Direction: <%= wind_direction[i]%></p>
        <p>Wind Speed: <%= wind_speed[i]%></p>
      </td>

      <% runways.each do | runway | %>
        <% crosswind = runway[1][i]["crosswind"] %>
        <% if crosswind >= 5 %>
          <td class="table-danger">
            <p>Crosswind Component: <%= crosswind%></p>
          </td>
        <% elsif crosswind >= 4 %>
          <td class="table-warning">
            <p>Crosswind Component: <%= crosswind%></p>
          </td>
        <% else %>
          <td class="table-success">
            <p>Crosswind Component: <%= crosswind%></p>
          </td>
        <% end %>

      <% end %>
    </tr>
    <%end%>



  <tbody>
</table>

